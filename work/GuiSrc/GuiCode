import tkinter as tk
from tkinter import filedialog
from PIL import ImageTk, Image
import numpy as np
import cv2

from matplotlib import pyplot as plt

img = cv2.imread("People&Signs\image1.jpg")

img_gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)
img_rgb = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)

stop_data = cv2.CascadeClassifier('Haarcascades\stop_data.xml')

found = stop_data.detectMultiScale(img_gray,
								minSize =(20, 20))

amount_found = len(found)

if amount_found != 0:

	for (x, y, width, height) in found:

		cv2.rectangle(img_rgb, (x, y),
					(x + height, y + width),
					(0, 255, 0), 5)

plt.subplot(1, 1, 1)
plt.imshow(img_rgb)
plt.show()

# initialize the GUI
root = tk.Tk()
root.title("Sign Recognition")

# function to open an image file and display it on the GUI
def open_image():
    file_path = filedialog.askopenfilename()
    image = cv2.imread(file_path)
    image = cv2.cvtColor(image, cv2.COLOR_BGR2RGB)
    image = Image.fromarray(image)
    image = ImageTk.PhotoImage(image)
    image_label.config(image=image)
    image_label.image = image
    predict_sign(file_path)

# function to run the AI model and display the prediction on the GUI
def predict_sign(file_path):
    image = cv2.imread(file_path)
    # preprocess the image as needed
    prediction = your_model.predict(image)
    prediction_label.config(text="Predicted Sign: " + prediction)

# button to open an image file
open_button = tk.Button(root, text="Open Image", command=open_image)
open_button.pack()

# label to display the selected image
image_label = tk.Label(root)
image_label.pack()

# label to display the prediction
prediction_label = tk.Label(root)
prediction_label.pack()

root.mainloop()
